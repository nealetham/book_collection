<div class="books new">
  <h2>Create Book</h2>

  <%= form_for(@book) do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <% @book.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div class="form-buttons">
      <%= form.submit("Create Book") %>
    </div>

  <% end %>
</div>
