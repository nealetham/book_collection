<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class="books index">
  <h2>Books</h2>

  <%= link_to("Add New Book", new_book_path) %>

  <table class="listing" summary="Book list" style="width: 100%;">
    <tr class="header">
      <th>#</th>
      <th>Book</th>
      <th>Actions</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td><%= book.id %></td>
        <td>
            <%= link_to(book.title, book) %>
        </td>
        <td class="actions">
            <%= link_to("Show", book_path(book), class: 'action show') %>
            <%= link_to("Edit", edit_book_path(book), class: 'action edit') %>
            <%= link_to("Delete", book_path(book), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}) %>
        </td>
    </tr>
    <% end %>
  </table>
</div>
